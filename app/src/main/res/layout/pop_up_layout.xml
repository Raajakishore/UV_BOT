<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingLeft="10dp"
android:background="#FFFFFF"
android:paddingRight="10dp"
android:gravity="center"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/Relay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfair_display_italic"
        android:text="          Instructions"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/tt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Relay1"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pt_sans"
        android:textColor="#2196F3"
        android:text="Ensure there is no human presence before turning on UV - Light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Relay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tt5"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/pt_sans"
        android:text="Check the battery level"


        android:textColor="#2196F3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Relay2"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pt_sans"
        android:text="                     Thank you"
        android:textSize="20sp" />


</RelativeLayout>